---
import "../styles/global.css";
import Heather from "../components/Cabecera.astro";
import Layout from "../layouts/Layout.astro";
---

<!-- Pagina de error 404 --><!-- Esta página se muestra cuando el usuario intenta acceder a una ruta que no existe -->
<Layout testTitle="404 - Página no encontrada">
  <Heather
    showCompare={false}
    showMediciones={false}
    showSensores={false}
    showPrediciones={false}
    showPh={false}
    showTemp={false}
    showBack={false}
  />
  <div
    class="flex flex-col items-center justify-center min-h-[60vh] text-center space-y-4"
  >
    <p class="text-xl sm:text-2xl text-gray-700 dark:text-gray-300">
      La página que buscas no existe
    </p>
    <p class="text-6xl sm:text-8xl font-bold text-blue-600">404</p>
  </div>
</Layout>
